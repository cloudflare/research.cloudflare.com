<style>

:root {
  --indigo-0: #170f58;
  --indigo-7: #c2bdf3;
  --indigo-8: #dfdcf9;
  --indigo-9: #f1f0fc;

  --violet-0: #350b42;
  --violet-7: #dfa8f1;
  --violet-8: #ebcaf6;
  --violet-9: #f7eafb;
}

.box {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}
.box > * {
  flex: 1 1 auto;
}
.box a {
  color: black;
  max-width: 17rem;
  min-width: 17rem;
  max-height: 20rem;
  background-color: var(--indigo-9);
  overflow: hidden;
  padding: 1rem;
  border: 0.2rem dashed var(--indigo-7);
  border-radius: 0.5rem;
}
.box a.reference {
  background-color: var(--violet-9);
  border: 0.2rem solid var(--violet-7);
}
.box a h3 {
  color: var(--indigo-0);
  display: block;
  margin-top: 0;
  /* background-color: lightgrey; */
}
.box a.reference h3 {
  color: var(--violet-0);
}

.box a:hover {
  box-shadow:
   -2px -2px 2px #f7ac6d,
   2px -2px 2px #f7ac6d,
   -2px 2px 2px #f7ac6d,
    2px 2px 2px #f7ac6d;
  background-color: #dfdcf9;
  text-decoration: none;
}
.box a.reference:hover {
  background-color: #ebcaf6;
}
.box a:hover h3 {
  text-decoration: underline;
}



</style>

<h1>Resources</h1>

<h2>Active experiments</h2>

<div class="box">
  {% for experiment in collections.experiment | reverse %}
  <a href="{{ experiment.data.url }}" {% if 'http' in experiment.data.url %}target="_blank" nofollow{% endif %}>
    <h3>{{ experiment.data.title }}</h2>
    <p>
      {{ experiment.data.description }}
    </p>
  </a>
  {% endfor %}
</div>

<h2>Quick references</h2>

<div class="box">
  {% for card in quick_references %}
  <a class="reference" href="{{ card.url }}" target="_blank" nofollow>
    <h3>{{ card.title }}</h2>
    <p>
      {{ card.description }}
    </p>
  </a>
  {% endfor %}

</div>

